generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserData {
  authUserId    String   @id @unique // Supabase auth user ID
  username      String?
  email         String?
  preferences   Json? // Example: { "theme": "dark", "notifications": true }
  lastLogin     DateTime?

  // Fields from NodeStats
  totalEarnings Float?
  todayEarnings Float?
  bandwidthUsed Float? // in GB
  uptime        Float? // percentage
  requestCount  Int?
  location      String?
  isConnected   Boolean?

  // Field for earnings history
  earningsHistory Json? // Example: [{ "date": "2023-10-26", "earnings": 3.42, "timestamp": 1698350400000 }]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
