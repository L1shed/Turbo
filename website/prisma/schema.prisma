generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @db.Uuid
  email     String   @unique
  username  String?  @unique
  preferences   Json? // Example: { "theme": "dark", "notifications": true }

  totalEarnings Decimal  @default(0) @db.Decimal(18, 4)
  todayEarnings Decimal  @default(0) @db.Decimal(18, 4)

  createdAt DateTime @default(now())
  // updatedAt DateTime @updatedAt

  nodes Node[]

  @@map("users")
}

model Node {
  id          String   @id @db.Uuid
  isActive    Boolean  @default(true)
  
  // Structure: { "2024-01-15": 25.50, "2024-01-16": 30.25, ... }
  dailyEarnings Json     @default("{}") @db.JsonB
  bandwidthUsed Float? // in GB
  uptimeMinutes Int?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([isActive])

  @@map("nodes")
}
